.ai-chat-page{background:#f5f5f5;display:flex;flex-direction:column;height:100vh}.chat-header{background:#fff;border-bottom:1rpx solid #e5e5e5;padding:30rpx}.chat-title{color:#2d3748;display:block;font-size:36rpx;font-weight:700;margin-bottom:8rpx}.chat-subtitle{color:#8fbc8f;display:block;font-size:28rpx}.chat-messages{flex:1;padding:30rpx}.messages-container{display:flex;flex-direction:column;gap:30rpx}.message-item{display:flex;width:100%}.message-item.user{justify-content:flex-end}.message-item.user .message-content{background:#8fbc8f;border-radius:24rpx 24rpx 8rpx 24rpx;color:#fff;max-width:70%}.message-item.assistant{justify-content:flex-start}.message-item.assistant .message-content{background:#fff;border-radius:24rpx 24rpx 24rpx 8rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,.1);color:#2d3748;max-width:70%}.message-content{word-wrap:break-word;padding:24rpx 30rpx}.message-text{display:block;font-size:28rpx;line-height:1.6}.loading-dots{align-items:center;display:flex;gap:8rpx}.dot{animation:blink 1.4s infinite;color:#8fbc8f;font-size:40rpx}.dot:nth-child(2){animation-delay:.2s}.dot:nth-child(3){animation-delay:.4s}@keyframes blink{0%,100%{opacity:.3}50%{opacity:1}}.quick-questions{background:#fff;border-top:1rpx solid #e5e5e5;padding:20rpx 30rpx}.quick-title{color:#718096;display:block;font-size:28rpx;margin-bottom:16rpx}.quick-list{display:flex;flex-wrap:wrap;gap:16rpx}.quick-item{background:#f0f0f0;border-radius:50rpx;cursor:pointer;padding:16rpx 24rpx;transition:all .3s}.quick-item:active{background:#e0e0e0}.quick-text{color:#2d3748;font-size:26rpx}.chat-input-area{align-items:center;background:#fff;border-top:1rpx solid #e5e5e5;display:flex;gap:16rpx;padding:20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom))}.chat-input{background:#f5f5f5;border:none;border-radius:50rpx;flex:1;font-size:28rpx;padding:20rpx 24rpx}.send-button{background:#8fbc8f;border:none;border-radius:50rpx;color:#fff;font-size:28rpx;min-width:120rpx;padding:20rpx 40rpx}.send-button[disabled]{background:#ccc;color:#999}