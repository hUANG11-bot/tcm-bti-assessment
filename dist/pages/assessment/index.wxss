.assessment-page{background:linear-gradient(180deg,#fcfcfc,#fff);min-height:100vh;padding:40rpx 30rpx}.progress-section{margin-bottom:40rpx}.progress-info{display:flex;font-size:28rpx;justify-content:space-between;margin-bottom:16rpx}.progress-text{color:#718096}.dimension-text{font-weight:500}.question-card{backdrop-filter:blur(10rpx);background:hsla(0,0%,100%,.9);border-radius:24rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.1);margin-bottom:40rpx;padding:60rpx 40rpx}.question-content{margin-bottom:60rpx}.question-text{color:#2d3748;display:block;font-size:48rpx;font-weight:700;line-height:1.6;margin-bottom:24rpx}.golden-badge{background:#8fbc8f;border-radius:50rpx;color:#fff;display:inline-block;font-size:24rpx;font-weight:700;padding:8rpx 24rpx}.options-list{display:flex;flex-direction:column;gap:24rpx}.option-button{align-items:center;background:hsla(0,0%,95%,.5);border:2rpx solid transparent;border-radius:24rpx;display:flex;justify-content:space-between;padding:32rpx;text-align:left;transition:all .2s;width:100%}.option-button.selected{background:rgba(143,188,143,.1);border-color:#8fbc8f}.option-text{flex:1;font-size:32rpx;font-weight:500}.selected-indicator{background:#8fbc8f;border-radius:50%;height:24rpx;width:24rpx}.navigation-buttons{display:flex;justify-content:space-between;margin-top:40rpx}.nav-button{background:transparent;border:none;color:#718096;font-size:32rpx}