.user-info-page{background:linear-gradient(180deg,#fcfcfc,#fff);min-height:100vh;padding:40rpx 30rpx}.form-container{backdrop-filter:blur(10rpx);background:hsla(0,0%,100%,.9);border-radius:24rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.1);padding:60rpx 40rpx}.form-header{margin-bottom:60rpx;text-align:center}.form-title{color:#2d3748;display:block;font-size:48rpx;font-weight:700;margin-bottom:16rpx}.form-desc{color:#718096;display:block;font-size:28rpx}.form-content{display:flex;flex-direction:column;gap:40rpx}.form-item{display:flex;flex-direction:column;gap:16rpx}.form-label{color:#2d3748;font-size:32rpx;font-weight:500}.form-input{background:hsla(0,0%,100%,.8);border:2rpx solid #e2e8f0;border-radius:16rpx;font-size:32rpx;padding:24rpx}.form-hint{color:#718096;font-size:24rpx}.radio-label{align-items:center;display:flex;font-size:32rpx;gap:16rpx;margin-right:40rpx}.checkbox-label{align-items:center;display:flex;font-size:28rpx;gap:16rpx;padding:16rpx 0}.submit-button{background:#8fbc8f;border:none;border-radius:50rpx;box-sizing:border-box;color:#fff;font-size:32rpx;margin-top:40rpx;padding:24rpx;width:100%}